<div class="container row post-details">
    <div class="card">
        <h4 class="card-title"><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <div class="card-body">
            <p class="card-text post-content">{{content}}</p>
            <p class="card-text post-author">Posted by {{user.username}} on
                {{format_date date_created}}</p>
        </div>
    </div>
</div>